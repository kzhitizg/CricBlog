<% include partials/header %>

<div class="ui text container segment">
    <h1>Edit Post</h1>

    <form action="/blogs/<%= blog.id%>?_method=PUT" method="POST" class="ui form">
        <div class= "field">
            <label>Title</label>
            <input type="text" name="body[title]" value="<%= blog.title%>">
        </div>
        <div class= "field">
            <label>Image</label>
            <input type="text" name="body[image]" value="<%= blog.image%>">
        </div>
        <div class= "field">
            <label>Content</label>
            <textarea name="body[body]" rows=15> <%= blog.body%></textarea>
        </div>
        <button class="ui right labeled icon blue big inverted button">
            <i class="right arrow icon"></i>
            Done
        </button>
    </form>
</div>

<% include partials/footer %>